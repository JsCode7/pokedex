---
interface Props {
	name: string;
	id: number;
	image?: string;
}

const { name, id } = Astro.props;
const urlPokemon = `https://www.wikidex.net/wiki/${name}`
const imagePokemon = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/${id}.png`
---

<li class="link-card">
	<a href={urlPokemon}>
		<h2 class="capitalize">
			{id} - {name}
		</h2>
		<span>
			<img class="m-auto" src={imagePokemon} alt=`image-pokemon-${id}`>
		</span>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		text-align: center;
		padding: 1px;
		max-width: 100%;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
